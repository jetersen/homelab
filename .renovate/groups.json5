{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux Group",
      groupName: "Flux",
      matchDatasources: ["docker"],
      matchPackageNames: ["/flux-operator/", "/flux-instance/"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Talos Group",
      groupName: "Talos",
      matchPackageNames: ["/siderolabs/talos/", "/siderolabs/installer/"],
      matchDatasources: ["docker", "github-releases", "github-tags"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Kubernetes Group",
      groupName: "Kubernetes",
      matchPackageNames: [
        "kubernetes/kubernetes",
        "ghcr.io/siderolabs/kubelet",
      ],
      matchDatasources: ["docker", "github-releases"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "VictoriaMetrics Group",
      groupName: "VictoriaMetrics",
      matchPackageNames: [
        "/victoria-metrics/",
        "/victoria-logs/",
        "/victoria-logs-collector/",
      ],
      matchDatasources: ["docker"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
    },
  ],
}
